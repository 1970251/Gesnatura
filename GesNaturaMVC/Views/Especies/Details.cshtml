@model GesNaturaMVC.ViewModels.EspecieViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Nome)</h2>
    
    <div id="div-left">
    @foreach (var item in Model.listaFotosVM)
    {
        <div class="container" style="margin-top:10px">
            <div class="row form-group">
                <div class="col-xs-12 col-md-6">
                    <div class="panel-default">
                        <div class="thumbnail">
                            @*<img src="@Url.Content(item.Caminho)" width="400" height="300" />*@
                            <img src="@Url.Content(item.Caminho)" alt="Lights" style="width:100%" />
                            <label for="toggle-1"></label>
                            <div class="caption">
                                <h4>@Model.NomeCientifico</h4>
                                <p>Genero: @Model.Genero.Nome</p>
                                <p>Familia: @Model.Familia</p>
                                <p>Ordem: @Model.Ordem</p>
                                <p>Classe: @Model.Classe</p>
                            </div>
                        </div>
                        @*<input type="checkbox" id="toggle-1" class="panel-image-toggle">*@

                    </div>

                </div>
            </div>
            
        </div>

    }
</div>


    <div id="div-right">
        <h4>Detalhes</h4>
        <dl>
            <dt style="font-size:medium">Descricao: </dt>
            <dd>@Model.Descricao</dd>
            <dt style="font-size:medium">Calendário: </dt>
            <dd>@Model.Calendario</dd>
            <dt style="font-size:medium">Abundância: </dt>
            <dd>@Model.Abundancia</dd> 
        </dl>
        
        

    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
        @*@Html.ActionLink("Next","Details", new { id = Model.ID + 1 }) |
        <a href="ViewBag.NextID">Next</a> |*@
        @Html.ActionLink("Back to List", "Index")
        
    </p>
    


